WindowManager:
	FirstWindow:
	SecondWindow:
	ThirdWindow:


<FirstWindow>  
    name: "First"

    BoxLayout:
        orientation: "vertical"
		size: root.width, root.height
        
        Label:
			id: click_label
			text: "Login dulu"
			font_size: 32

        Spinner:
			id: spinner_id
			text: "LOGIN"
			font_size: 30
			values: ["Aku", "Kamu", "Dia"]

			on_text: root.spinner_clicked(spinner_id.text)

		Button:
			text: "Ayo mulai"
			font_size: 30
			on_release: 
				app.root.current = "second"
				root.manager.transition.direction = "right"	

	
<SecondWindow>:
	name: "second"

    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Selamat datang manusia Pencari Amal"
			font_size: 40

		Button:
			text: "Ayo Cari Amal mu"
			font_size: 32
			on_release: 
				app.root.current = "Gambar"
				root.manager.transition.direction = "left"

<ThirdWindow>:
	name: "Gambar"

	do_default_tab: False

	size_hint: 1, 1
	pos_hint: {'center_x': .5, 'center_y': .5}

    
	tab_pos: 'bottom_mid'

    TabbedPanelItem:
		text: "Hehehe"
		Image:
			source: "img/AAA.jpg"


    TabbedPanelItem:
		text: "Kembali"
	    Button:
            text:"Ayo Balik"
			on_release: 
				app.root.current = "First"
				root.manager.transition.direction = "left"