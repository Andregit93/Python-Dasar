MDFloatLayout:
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
	
		Label:
			id: nama_label
			text_size: self.size
			halign: "center"
			valign: "middle"
			text: "Masukkan Nama Barang"
			font_size: 32

		TextInput:
			id: input_nama
			multiline: False
			size_hint: (1, .5)
        
        Label:
			id: label_harga
			text_size: self.size
			halign: "center"
			valign: "middle"
			text: "Masukkan Harga"
			font_size: 32

		TextInput:
			id: input_harga
			multiline: False
			size_hint: (1, .5)

		Button:
			size_hint: (1, .5)
			font_size: 32
			text: "Tambah"
			on_press: app.submit()

		Button:
			size_hint: (1, .5)
			font_size: 32
			text: "Riwayat"
			on_press: app.show_records()
